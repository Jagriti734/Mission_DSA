class ListNode:
    def __init__(self, val=0, next=None):
        self.val = val
        self.next = next

class Solution:
    def detectCycle(self, head: ListNode) -> ListNode:
        slow, fast = head, head

        # Phase 1: Detect cycle
        while fast and fast.next:
            slow = slow.next
            fast = fast.next.next
            if slow == fast:
                break
        else:
            return None  

        # Phase 2: Find cycle entry
        slow = head
        while slow != fast:
            slow = slow.next
            fast = fast.next

        return slow  
