import heapq

def cookies(k, A):
    heapq.heapify(A)  # convert list into min-heap
    operations = 0

    while len(A) > 1 and A[0] < k:
        least = heapq.heappop(A)
        second_least = heapq.heappop(A)
        new_cookie = least + 2 * second_least
        heapq.heappush(A, new_cookie)
        operations += 1

    return operations if A and A[0] >= k else -1
